@page
@model WebApp.Pages.Proveedor.GridModel
@{
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            proveedores
        </div>
        <div class="card-body">
            <h5 class="card-title">Proveedores</h5>

            <a class="btn btn-secondary" asp-page="Edit"><i class='bx bx-message-add'></i></a>

            <div class="row">
                <div class="col-12">
                    <table id="GridView" class="table table-bordered table table-striped table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Identificacion</th>
                                <th>Nombre</th>
                                <th>Primer Apellido</th>
                                <th>Segundo Apellido</th>
                                <th>Edad</th>
                                <th>Fecha Nacimiento</th>
                                <th>Accion</th>
                            </tr>

                        </thead>

                        <tbody>
                            @foreach (var item in Model.GridList) 
                            {
                            <tr>
                                <td>@item.IdProveedor</td>
                                <td>@item.Identificacion</td>
                                <td>@item.Nombre</td>
                                <td>@item.PrmierApellido</td>
                                <td>@item.SegundoApellido</td>
                                <td>@item.Edad</td>
                                <td>@item.FechaNacimiento </td>
                                <td>
                                    <a class="btn btn-secondary" asp-page="Edit" asp-route-id="@item.IdProveedor"><i class='bx bx-edit'></i></a>
                                    <button type="button" class="btn btn-secondary"> onclick = "ProveedorGrid.OnClickEliminar(@item.IdProveedor)"><i class='bx bx-trash'></i></button>

                                </td>

                            </tr>
                            }

                        </tbody>
                   
                    </table>

                </div>
                
            </div>

           
        </div>
    </div>
</div>

@section Scripts{ 

<script>
    var MensajeApp = "@Html.Raw(Model.Mensaje)";
</script>

<script defer src =" ~/App/Proveedor/Grid.js">

</script>

}